<script>
  const fullText = "technology beyond comparison";
  const typedText = document.getElementById('typedText');
  const namesContainer = document.getElementById('namesContainer');
  const jayasanText = document.getElementById('jayasanText');
  const infowares = document.getElementById('infowares');
  const animatedSequence = document.getElementById('animatedSequence');
  const mainContent = document.getElementById('mainContent');
  
  let charIndex = 0;

  function showNames() {
    namesContainer.style.opacity = '1';
    jayasanText.classList.add('animate-slide-in-left');
    infowares.classList.add('animate-slide-in-right');
    setTimeout(typeCharacters, 500);
  }

  function typeCharacters() {
    charIndex = 0;
    typeCharacter();
  }

  function typeCharacter() {
    if (charIndex < fullText.length) {
      typedText.textContent += fullText.charAt(charIndex);
      charIndex++;
      setTimeout(typeCharacter, 60);
    } else {
      setTimeout(hideAnimationShowMain, 500);
    }
  }

  function hideAnimationShowMain() {
    animatedSequence.classList.add('animate-fade-out');

    // ðŸ”¥ Remove extra spacing under typewriter animation
    namesContainer.classList.add('hide-space');

    setTimeout(() => {
      animatedSequence.classList.add('hidden-content');
      mainContent.classList.remove('hidden-content');
      mainContent.classList.add('show-content', 'animate-fade-in-up');
    }, 800);
  }

  showNames();
</script>

